{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "types" : [
            "node"
          ],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "./src/**/*"
    ]
}